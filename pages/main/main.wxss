.banner {
  height: 400rpx;
}

.banner image{
  width:100%;
}

.member-header {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ededed;
  padding: 20rpx;
}

.member-header text{
  font-weight: bold;
  margin-left: 20rpx;
  line-height: 60rpx;
}

.arrow{
  width:60rpx;
  height:60rpx;
  margin-left: 480rpx;
}

.member-content{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ededed;
  padding: 20rpx;
}

.avatar {
  width: 150rpx;
  height:150rpx;
  margin-left: 20rpx;
}

.member-detail{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-left: 20rpx;
}

.info{
  width: 420rpx;
  margin-top: 20rpx;
  font-size: 25rpx;
}

.arrow-member{
  width:60rpx;
  height:60rpx;
  margin-top: 45rpx;
}

.member-thought{
  display: flex;
  flex-direction: row;
}

.thought-detail{
  margin-left: 20rpx;
  width: 630rpx;
  font-size: 28rpx;
  text-indent: 50rpx;
}

.article{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  border-bottom: 1px solid #ededed;
}

.article image{
  width:100%;
  height: 400rpx;
}

.title{
  margin: 20rpx;
  font-weight: bold;
}

.intro{
  margin: 20rpx 0;
  font-size: 30rpx;
  text-indent: 40rpx;
}

.footer{
  width: 750rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
}

.footer text{
  font-size: 24rpx;
  color: #aaa;
  margin-left: 60rpx;
  margin-top: 10rpx;
}

.footer button{
  width:120rpx;
  height:38rpx;
  font-size:16rpx; 
  margin-left: 40rpx;
  margin-top: 10rpx;
}